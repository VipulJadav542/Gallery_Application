<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/updatelayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="15sp"
    app:cardElevation="20sp"
    android:padding="20sp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <EditText
            android:id="@+id/update_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10sp"
            android:hint="@string/title"
            android:inputType="text|textLongMessage|textEnableTextConversionSuggestions|textImeMultiLine|textMultiLine"
            android:minHeight="48dp"
            android:autofillHints=""
            tools:ignore="VisualLintTextFieldSize" />

        <EditText
            android:id="@+id/update_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10sp"
            android:ems="10"
            android:hint="@string/description"
            android:inputType="text|textLongMessage|textEnableTextConversionSuggestions|textImeMultiLine|textMultiLine"
            tools:ignore="MissingPrefix,TouchTargetSizeCheck,VisualLintTextFieldSize"
            android:autofillHints="" />
    </LinearLayout>
</androidx.cardview.widget.CardView>